<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li>
  <%= check_box_tag(:completed) attr:'checked' %>
  <%= link_to task.title, task_path(task) %>
  <%=link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  </li>
<% end %>
</ul>
<%= link_to "Add a new task", new_task_path %>
