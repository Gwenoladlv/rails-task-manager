<h1> <%= @task.title %></h1>

<p> <%= @task.details%></p>
<p>
<% if @task.completed %>
<%= check_box_tag(:completed) %>
<%= 'Task is done' %>
<% else %>
<%= check_box_tag(:completed) %>
<%= 'Task need to be completed' %>
<% end %>
</p>
<%= link_to "Edit a task", edit_task_path(@task) %>
<%=link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
